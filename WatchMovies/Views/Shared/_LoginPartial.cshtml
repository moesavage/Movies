@using Microsoft.AspNetCore.Identity
@using WatchMovies.Models.Domain

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="UserAuthentication" asp-action="Logout" method="post" id="logoutform" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item dropdown" aria-labelledby="navbarDropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="bi bi-gear"></i>
                Manage
            </a>

            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item" asp-controller="Producers" asp-action="Index"><i class="bi bi-headset"></i> Producers</a></li>
                <li><a class="dropdown-item" asp-controller="Actors" asp-action="Index"><i class="bi bi-person-square"></i> Actors</a></li>
            </ul>

        </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="ProfileController" asp-action="Index" class="nav-link" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-link navbar-btn nav-link">Log Out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav navbar-collapse justify-content-end">
        <li class="nav-item"> <a href="/UserAuthentication/Registration" class="nav-link">Register</a></li>
        <li class="nav-item"> <a href="/UserAuthentication/Login" class="nav-link">Log In</a></li>
    </ul>
}