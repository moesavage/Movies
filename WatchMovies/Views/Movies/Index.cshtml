@model IEnumerable<Movie>

@{
    ViewData["Title"] = "List of Movies";
}

<div class="row">

    <div class="text-white mb-2">
        <a asp-controller="Movies" asp-action="create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New
        </a>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-xs-6 border-primary mb-3">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-12">
                            <div class="card-header text-white bg-dark">
                                <p class="card-text">
                                    <h5 class="card-title d-flex justify-content-between align-items-center">
                                        @item.Name
                                        @if (User.IsInRole("user"))
                                        {
                                            <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                        }
                                    </h5>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <img src="@item.ImageURL" width="100%" alt="@item.Name">
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <p class="card-text">@item.Description</p>
                                <p class="card-text"><b>Category: </b>@item.MovieCategory</p>
                                <p class="card-text"><b>Duration: </b>@item.Duration</p>
                                <p class="card-text">
                                </p>

                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="card-footer ">
                                <p class="card-text d-flex justify-content-between align-items-center">
                                    <a class="btn btn-outline-primary float-right" asp-action="" asp-route-id="@item.Id"><i class="bi bi-eye-fill"></i> Show Details</a>
                                    @*<a class=""><i class="bi bi-heart-fill"></i></a>*@
                                    R18
                                    <a class="btn btn-success text-white"><i class="bi bi-play"></i> Play Now</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
    




